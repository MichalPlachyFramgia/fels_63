<% provide :title, @user.name %>
<h1><%= t "activities" %></h1>
<div class="row">
  <aside class="col-md-4">
    <%= render "users/show_follow" %>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" unless current_user? @user %>
    <hr>
    <% if current_user? @user %>
      <div class="btn-group inline"> 
        <%= link_to t("word_list"), words_path, class: "btn btn-default" %>
      </div> 
      <div class="btn-group inline"> 
        <%= link_to t("start_lesson"), categories_path, class: "btn btn-default" %>
      </div>
      <hr> 
    <% end %>
    <%= render @lessons %>
    <div id="infinite-scrolling">
      <%= will_paginate @lessons %>
    </div>
  </div>
</div>
