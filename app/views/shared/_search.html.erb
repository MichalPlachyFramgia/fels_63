<%= form_for words_path, method: :get do |f| %>
  <div class="row">
    <p><%= t :categories %></p>
    <div id="search-field">
      <div class="col-md-5">
       <%= select_tag "category_id", options_from_collection_for_select(@categories, "id", "name", params[:category_id]), include_blank: t("word.all") %>
      </div>
    </div>
    <div class="tm-radio">
      <% [Settings.setting.all, Settings.setting.learned, Settings.setting.not_learned].each do |item| %>
        <%= label_tag item, class: "radio-inline" do %>
          <%= radio_button_tag :filter_state, item, 
            checked = (params[:filter_state] == item || params[:filter_state].blank?) %> 
          <%= item.titleize %>
        <% end %>
      <% end %>
    </div>
    <div class="tm-submit">
      <%= f.submit t("search"), class: "btn btn-primary btn-default" %>
      <%= link_to t("CSV"), words_path(format: "csv"), class: "btn btn-primary btn-default" %>
    </div>
  </div>
  <hr>
<% end %>
